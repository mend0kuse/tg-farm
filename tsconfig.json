{
    "compilerOptions": {
        "moduleDetection": "force",
        "module": "preserve",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "target": "es2017",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "exclude": ["node_modules", "eslint.config.mjs"]
}

{
    "compilerOptions": {
        "module": "ESNext",
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution":"node",
        "isolatedModules": true,
        "target": "es2017",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "exclude": ["node_modules", "eslint.config.mjs"]
}
